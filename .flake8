[flake8]
max-line-length = 120
extend-ignore =
    # Complexity warnings - ignore for now as they're not critical errors
    C901,
    # W503: line break before binary operator (conflicts with Black)
    W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    .pytest_cache,
    node_modules
max-complexity = 20
